#!/usr/bin/env node

var logger = require('../lib/logger')
var request = require('request')
var chalk = require('chalk')

/**
 * Padding.
 */

console.log()
process.on('exit', function () {
  console.log()
})

/**
 * VIPS template.
 */
console.log('  Available VIPS templates:')
console.log()
console.log(
    '  ' + chalk.yellow('★') +
    '  ' + chalk.blue('vips') +
    ' - ' + 'A full-featured vue + vuex + webpack setup in VIPS')
console.log(
    '  ' + chalk.yellow('★') +
    '  ' + chalk.blue('vipsr') +
    ' - ' + 'A full-featured vue + vuex + vue-router + webpack setup in VIPS')
console.log()

/**
 * Offcial template.
 */

request({
  url: 'https://api.github.com/users/vuejs-templates/repos',
  headers: {
    'User-Agent': 'vip-cli',
    'Authorization': 'token f1a83b9b44fb486c2f26136b29bd00c08882137d'
  }
}, function (err, res, body) {
  if (err) logger.fatal(err)
  console.log('  Available official templates:')
  console.log()
  JSON.parse(body).forEach(function (repo) {
    console.log(
      '  ' + chalk.yellow('★') +
      '  ' + chalk.blue(repo.name) +
      ' - ' + repo.description)
  })
})
